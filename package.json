{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3003",
    "build": "next build",
    "build:production": "ESLINT_NO_DEV_ERRORS=true next build",
    "start": "next start -p 3003",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "validate:content": "npx tsx scripts/validate-content.ts",
    "build:prod": "./scripts/build-production.sh",
    "deploy": "./scripts/deploy.sh",
    "docker:build": "docker build -t portfolio:latest .",
    "docker:run": "docker run -p 3000:3000 portfolio:latest",
    "k8s:deploy": "kubectl apply -k k8s/",
    "k8s:status": "kubectl get pods -n portfolio",
    "analyze": "ANALYZE=true npm run build",
    "devto:publish": "tsx scripts/devto-publish.ts publish",
    "devto:update": "tsx scripts/devto-publish.ts update",
    "devto:unpublish": "tsx scripts/devto-publish.ts unpublish",
    "devto:publish-dir": "tsx scripts/devto-publish.ts publish-dir",
    "devto:sync": "tsx scripts/devto-publish.ts sync",
    "devto:list": "tsx scripts/devto-publish.ts list",
    "email:test": "tsx scripts/test-email.ts send-test",
    "email:test-contact": "tsx scripts/test-email.ts send-contact-form",
    "email:test-all": "tsx scripts/test-email.ts send-to-all",
    "email:verify": "tsx scripts/test-email.ts verify-config",
    "email:stress": "tsx scripts/test-email.ts stress-test",
    "test:email:integration": "NODE_ENV=production TEST_EMAIL_PRODUCTION=true jest __tests__/integration/email-production.test.ts"
  },
